.message-replies
  margin-top: 1rem
  &-content
    max-height: 0
    overflow: hidden
  & .message
    padding-left: 0

.message-replies--open
  animation: 1s forwards message-replies--open
.message-replies--close
  animation: 0.5s forwards message-replies--close

@keyframes message-replies--open
  0%
    max-height: 0
  99%
    max-height: 1000px

  100%
    max-height: 100%
@keyframes message-replies--close
  from
    max-height: 1000px
  to
    max-height: 0


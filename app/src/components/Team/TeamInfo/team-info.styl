#team-info
  background-color: #4b3949
  width: 200px
  padding: 1rem
  overflow-y: auto visible
  height: 100vh
  &::-webkit-scrollbar
    width: 3px
  &-channel-list
    margin-top: 1rem
    & .channel-name
      color: #ccc
      padding: .2rem
      font-size: 1.2rem
  position: absolute
  left: 50px
  z-index: 2
  @media screen and (min-width: 1200px)
    position: relative
    left: 0
    width: 15%

#toggle-team
  position: absolute
  left: 100%
  top: 2rem
  z-index: 200
  font-size: 2rem
  color: lightgrey
  @media screen and (min-width: 1200px)
    display: none

.team-info-name
  color: white
  font-size: 1.5rem

.team-info--close
  @media screen and (max-width: 1200px)
    animation: 1s forwards team-info-slide-left
.team-info--open
  @media screen and (max-width: 1200px)
    animation: 1s forwards team-info-slide-right
@keyframes team-info-slide-left
  from
    left: 0
  to
    left: -200px
@keyframes team-info-slide-right
  from
    left: -200px
  to
    left: 50px


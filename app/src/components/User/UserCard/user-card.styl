.user-card
  width: 250px
  position: fixed
  border-radius: 20px
  background-color: white
  border: 1px solid lightgrey
  &-picture img
    border-radius: 20px 20px 0 0
    width: 100%
  &-name
    text-align: center
    font-weight: bold
  &-email
    text-align: center
    text-decoration: underline
  &-email
    padding-top: .5rem
  &-content
    padding: 1rem
    border-top: none

#search
  display: flex
  flex-direction: column
  width: 100%
  max-height: 100vh
  & .search-form
    width: 100%
    background-color: #261c25
    padding: 1rem
    max-height: 70px
  & select
    background-color: white
    border: 1px solid #ccc
  & input::placeholder
    color: white
  & select, & input,  & button
    margin-left: .5rem
    border: none
    background-color: darkslategray
    color: white
    padding: .5rem 1rem

